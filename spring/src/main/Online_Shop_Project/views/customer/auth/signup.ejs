<%- include('../includes/head', {pageTitle: '회원가입'}) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../includes/header') %> 
    <main>
        <h1>회원가입</h1>
        <% if (inputData.errorMessage) {%>
            <section class="alert">
                <h2>잘못된 입력</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken%>">
            <div>
                <label for="email">이메일</label>
                <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
            </div>
            <div>
                <label for="confirmEmail">이메일 확인</label>
                <input type="email" id="confirmEmail" name="confirmEmail" value="<%= inputData.confirmEmail %>" required>
            </div>
            <div>
                <label for="password">비밀번호</label>
                <input type="password" id="password" name="password" minlength="6" value="<%= inputData.password %>" required>
            
            </div>
            <hr>
            <div>
                <label for="fullname">이름</label>
                <input type="text" id="fullname" name="fullname" value="<%= inputData.fullname %>" required>
            
            </div>
            <div>
                <label for="address">주소</label>
                <input type="text" id="address" name="address" value="<%= inputData.address %>" required>
            </div>
            <div>
                <label for="detailAddress">상세 주소</label>
                <input type="text" id="detailAddress" name="detailAddress" value="<%= inputData.detailAddress %>"  required>
            </div>
            <div>
                <label for="postal">우편번호</label>
                <input type="text" id="postal" name="postal" value="<%= inputData.postal %>" required>
            </div>
            <button class="btn">회원가입</button>
            <p id="switch-form"><a href="/login">로그인</a></p>
        </form>
    </main>
</body>
<%- include('../includes/footer') %>